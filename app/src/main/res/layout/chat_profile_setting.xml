<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_notification_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/notification_setting"
        android:textSize="13sp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/text_view_notification_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/notification_status_on"
        android:textColor="@color/blue"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_delete_chat_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_view_notification_setting"
        android:layout_marginTop="12dp"
        android:onClick="clearChatHistory"
        android:text="@string/delete_chat_history"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/text_view_block_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_view_delete_chat_history"
        android:layout_marginTop="10dp"
        android:onClick="blockUser"
        android:text="@string/block_user"
        android:textColor="#FFD0021B"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>