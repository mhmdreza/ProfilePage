<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="@dimen/group_member_card_image_length"
        android:layout_height="@dimen/group_member_card_image_length"
        android:layout_centerHorizontal="true"
        android:id="@+id/image_view_group_member_card" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/image_view_admin"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_star"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_group_member_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_below="@id/image_view_group_member_card"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:id="@+id/text_view_group_member_last_seen"
        android:gravity="center"
        android:layout_below="@id/text_view_group_member_name"/>

</RelativeLayout>