<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_group_member_card"
        android:layout_width="@dimen/group_member_card_image_length"
        android:layout_height="@dimen/group_member_card_image_length"
        android:layout_centerHorizontal="true"
        android:contentDescription="image_view_group_member_card"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/image_view_admin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:contentDescription="image_view_admin"
        android:src="@drawable/ic_star"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_view_group_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_group_member_card"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/text_view_group_member_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_group_member_name"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="8sp"
        tools:ignore="SmallSp" />

</RelativeLayout>